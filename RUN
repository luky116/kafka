# 启动 zk
export KAFKA_OPTS="-Djava.security.auth.login.config=/Users/sanyue/code/qihoo/Qkafka/config/zookeeper_jaas.conf"
bin/zookeeper-server-start.sh /Users/sanyue/code/qihoo/Qkafka/config/zookeeper.properties &

# 启动 kafka
export KAFKA_OPTS=-Djava.security.auth.login.config=/Users/sanyue/code/qihoo/Qkafka/config/kafka_server_jaas.conf
bin/kafka-server-start.sh /Users/sanyue/code/qihoo/Qkafka/config/server.properties

